{
  "name": "block-oli",
  "private": true,
  "version": "0.1.10",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-s build:*",
    "build:schema": "run-s build:schema:*",
    "build:schema:quicktype": "quicktype src/modules/core/rules.ts -o src/schemas/draft.json --lang schema",
    "build:schema:merge": "node src/schemas/merge.js",
    "build:src": "tsc && vite build",
    "zip": "npm-build-zip --source=dist/",
    "publish": "run-s build test zip",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest --no-watch",
    "test:watch": "vitest --watch",
    "test:unit": "vitest --no-watch --project=unit",
    "test:browser": "vitest --no-watch --project=browser",
    "test:update-snapshots": "vitest --no-watch --project=browser --update",
    "test:coverage": "vitest --run --coverage",
    "test:coverage:report": "open \"file://$(pwd)/coverage/index.html\"",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.30.0",
    "@emotion/react": "^11.11.4",
    "chakra-react-select": "^6.1.0",
    "loglevel": "^1.9.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.2.1",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@testing-library/react": "^16.3.1",
    "@types/chrome": "^0.0.268",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.10",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "ajv": "^8.16.0",
    "deepmerge": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "happy-dom": "^20.0.11",
    "lodash-es": "^4.17.21",
    "npm-build-zip": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.57.0",
    "quicktype": "^23.0.170",
    "sass-embedded": "^1.97.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2"
  }
}
